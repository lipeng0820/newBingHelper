{
  "manifest_version": 2,
  "name": "newBing Helper",
  "version": "1.0",
  "description": "帮助用户快速修改Bing搜索的国家/地区和语言设置",
  "permissions": [
    "activeTab",
    "https://*.bing.com/*",
    "webRequest",
    "webRequestBlocking"
  ],
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://*.bing.com/*"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "48": "icon.png"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  }
}
